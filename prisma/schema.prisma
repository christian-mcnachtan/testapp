generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  created    DateTime @default(now())
  lastEdited DateTime @updatedAt
  content    String?
  published  Boolean  @default(false)
  authorId   Int?
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  created   DateTime @default(now())
  content   String?
  completed Boolean  @default(false)
  published Boolean  @default(false)
  authorId  Int?
}
